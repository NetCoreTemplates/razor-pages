@page

@if (!await Html.EnsureRoleAsync("Admin")) { return; }

<div id="admin" class="text-center">
    <svg style="width:8rem;height:8rem;color:rgb(8 145 178);" class="mt-4 rounded-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path fill="currentColor" d="M12 2a5 5 0 1 0 5 5a5 5 0 0 0-5-5zm0 8a3 3 0 1 1 3-3a3 3 0 0 1-3 3zm9 11v-1a7 7 0 0 0-7-7h-4a7 7 0 0 0-7 7v1h2v-1a5 5 0 0 1 5-5h4a5 5 0 0 1 5 5v1z"></path>
    </svg>
    <p class="my-2">
        @UserSession.DisplayName
    </p>

    <p>
        @(UserSession.UserName ?? UserSession.Email)
    </p>

    <p>
        @foreach (var role in UserSession.Roles.Safe())
        {
            <mark>@role</mark>
        }
    </p>

    <h3 class="mt-5">Admin Page</h3>
</div>
